{
    "name": "suggestio",
    "type": "module",
    "displayName": "Suggestio",
    "description": "Inline autocomplete using free LLMs without API keys",
    "publisher": "glacode",
    "author": "Glauco Siliprandi",
    "icon": "resources/logo.png",
    "version": "0.0.4",
    "engines": {
        "vscode": "^1.102.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/glacode/suggestio.git"
    },
    "homepage": "https://github.com/glacode/suggestio",
    "bugs": {
        "url": "https://github.com/glacode/suggestio/issues"
    },
    "license": "MIT",
    "keywords": [
        "autocomplete",
        "LLM",
        "inline",
        "code",
        "suggestions",
        "AI"
    ],
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:typescript",
        "onLanguage:python",
        "onLanguage:java",
        "onLanguage:c",
        "onLanguage:cpp",
        "onLanguage:csharp",
        "onLanguage:go",
        "onLanguage:php",
        "onLanguage:ruby",
        "onLanguage:rust",
        "onLanguage:html",
        "onLanguage:css",
        "onLanguage:json",
        "onLanguage:markdown",
        "onLanguage:shellscript",
        "onLanguage:yaml",
        "onLanguage:sql"
    ],
    "main": "./dist/extension.js",
    "files-unused-because-we-use-vscodeignore": [
        "dist/**",
        "!dist/**/*.map",
        "builtResources/**",
        "media/**",
        "resources/**",
        "!resources/demo.gif"
    ],
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "suggestio",
                    "title": "Suggestio",
                    "icon": "resources/logo.svg"
                }
            ]
        },
        "views": {
            "suggestio": [
                {
                    "id": "suggestio.chat.view",
                    "name": "Chat",
                    "type": "webview",
                    "icon": "resources/logo.svg"
                }
            ]
        },
        "inlineCompletions": [
            {
                "language": "javascript"
            },
            {
                "language": "typescript"
            },
            {
                "language": "python"
            },
            {
                "language": "java"
            },
            {
                "language": "c"
            },
            {
                "language": "cpp"
            },
            {
                "language": "csharp"
            },
            {
                "language": "go"
            },
            {
                "language": "php"
            },
            {
                "language": "ruby"
            },
            {
                "language": "rust"
            },
            {
                "language": "html"
            },
            {
                "language": "css"
            },
            {
                "language": "json"
            },
            {
                "language": "markdown"
            },
            {
                "language": "shellscript"
            },
            {
                "language": "yaml"
            },
            {
                "language": "sql"
            }
        ],
        "commands": [
            {
                "command": "suggestio.editGlobalConfig",
                "title": "Suggestio: Edit Global Config"
            },
            {
                "command": "suggestio.updateApiKey",
                "title": "Suggestio: Update API Key"
            },
            {
                "command": "suggestio.deleteApiKey",
                "title": "Suggestio: Delete API Key"
            },
            {
                "command": "suggestio.openChat",
                "title": "Suggestio: Focus on Chat View"
            },
            {
                "command": "suggestio.newChat",
                "title": "Suggestio: New Chat",
                "icon": "$(add)"
            },
            {
                "command": "suggestio.disableInlineCompletion",
                "title": "Suggestio: Disable Inline Completion",
                "icon": "$(eye)"
            },
            {
                "command": "suggestio.enableInlineCompletion",
                "title": "Suggestio: Enable Inline Completion",
                "icon": "$(eye-closed)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "suggestio.newChat",
                    "when": "view == suggestio.chat.view",
                    "group": "navigation@1"
                },
                {
                    "command": "suggestio.disableInlineCompletion",
                    "when": "view == suggestio.chat.view && suggestio.inlineCompletionEnabled",
                    "group": "navigation@2"
                },
                {
                    "command": "suggestio.enableInlineCompletion",
                    "when": "view == suggestio.chat.view && !suggestio.inlineCompletionEnabled",
                    "group": "navigation@2"
                }
            ]
        },
        "jsonValidation": [
            {
                "fileMatch": "config.json",
                "url": "./resources/config.schema.json"
            },
            {
                "fileMatch": "suggestio.config.json",
                "url": "./resources/config.schema.json"
            }
        ],
        "configuration": {
            "title": "Suggestio",
            "properties": {
                "suggestio.maxAgentIterations": {
                    "type": "number",
                    "default": 5,
                    "description": "Maximum number of iterations the agent can perform for a single request."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "compile": "npm run check-types && npm run lint && npm run build:webview && npm run copy-css && node esbuild.js",
        "package": "npm run check-types && npm run lint && npm run build:webview && npm run copy-css && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir dist",
        "watch-tests": "tsc -p . -w --outDir dist",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "node --experimental-vm-modules node_modules/.bin/jest --detectOpenHandles",
        "build:e2e": "tsc -p ./tsconfig.e2e.json && node ./scripts/rename-e2e.js",
        "test:e2e": "npm run build:e2e && node ./dist-e2e/runTest.cjs",
        "test:e2e-playwright": "playwright test --config=e2e-tests-playwright/playwright.config.ts",
        "test:debug": "node --inspect --experimental-vm-modules node_modules/.bin/jest --runInBand --debug",
        "build:webview": "esbuild src/webView/renderMarkDown.ts --bundle --outfile=builtResources/renderMarkDown.js --format=iife",
        "watch:webview": "esbuild src/webView/renderMarkDown.ts --bundle --outfile=builtResources/renderMarkDown.js --format=iife --watch",
        "copy-css": "node ./scripts/copyCss.js",
        "serve:chat": "node scripts/serve-chat.js"
    },
    "dependencies": {
        "highlight.js": "^11.11.1",
        "marked": "^16.3.0",
        "node-fetch": "^3.3.2"
    },
    "devDependencies": {
        "@playwright/test": "^1.56.1",
        "@types/express": "^5.0.5",
        "@types/glob": "^8.1.0",
        "@types/jest": "^30.0.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/vscode": "^1.102.0",
        "@typescript-eslint/eslint-plugin": "^8.39.0",
        "@typescript-eslint/parser": "^8.39.0",
        "@vscode/test-electron": "^2.5.2",
        "chokidar": "^4.0.3",
        "esbuild": "^0.25.10",
        "eslint": "^9.32.0",
        "express": "^5.1.0",
        "glob": "^11.0.3",
        "jest": "^30.0.5",
        "mocha": "^11.7.5",
        "npm-run-all": "^4.1.5",
        "ts-jest": "^29.4.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.9.2",
        "ws": "^8.18.3"
    },
    "overrides": {
        "js-yaml": "4.1.1"
    }
}