{
    "name": "suggestio",
    "type": "module",
    "displayName": "Suggestio",
    "description": "Inline autocomplete using free LLMs without API keys",
    "publisher": "glacode",
    "author": "Glauco Siliprandi",
    "icon": "resources/logo.png",
    "version": "0.0.4",
    "engines": {
        "vscode": "^1.102.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/glacode/suggestio.git"
    },
    "homepage": "https://github.com/glacode/suggestio",
    "bugs": {
        "url": "https://github.com/glacode/suggestio/issues"
    },
    "license": "MIT",
    "keywords": [
        "autocomplete",
        "LLM",
        "inline",
        "code",
        "suggestions",
        "AI"
    ],
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:typescript",
        "onLanguage:python",
        "onLanguage:java",
        "onLanguage:c",
        "onLanguage:cpp",
        "onLanguage:csharp",
        "onLanguage:go",
        "onLanguage:php",
        "onLanguage:ruby",
        "onLanguage:rust",
        "onLanguage:html",
        "onLanguage:css",
        "onLanguage:json",
        "onLanguage:markdown",
        "onLanguage:shellscript",
        "onLanguage:yaml",
        "onLanguage:sql"
    ],
    "main": "./dist/extension.js",
    "files": [
        "dist/**",
        "builtResources/**",
        "media/**",
        "resources/**"
    ],
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "suggestio",
                    "title": "Suggestio",
                    "icon": "resources/logo.svg"
                }
            ]
        },
        "views": {
            "suggestio": [
                {
                    "id": "suggestio.chat.view",
                    "name": "Chat",
                    "type": "webview"
                }
            ]
        },
        "inlineCompletions": [
            {
                "language": "javascript"
            },
            {
                "language": "typescript"
            },
            {
                "language": "python"
            },
            {
                "language": "java"
            },
            {
                "language": "c"
            },
            {
                "language": "cpp"
            },
            {
                "language": "csharp"
            },
            {
                "language": "go"
            },
            {
                "language": "php"
            },
            {
                "language": "ruby"
            },
            {
                "language": "rust"
            },
            {
                "language": "html"
            },
            {
                "language": "css"
            },
            {
                "language": "json"
            },
            {
                "language": "markdown"
            },
            {
                "language": "shellscript"
            },
            {
                "language": "yaml"
            },
            {
                "language": "sql"
            }
        ],
        "commands": [
            {
                "command": "suggestio.editGlobalConfig",
                "title": "Suggestio: Edit Global Config"
            },
            {
                "command": "suggestio.updateApiKey",
                "title": "Suggestio: Update API Key"
            },
            {
                "command": "suggestio.deleteApiKey",
                "title": "Suggestio: Delete API Key"
            },
            {
                "command": "suggestio.openChat",
                "title": "Suggestio: Focus on Chat View"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "compile": "npm run check-types && npm run lint && npm run build:webview && npm run copy-css && node esbuild.js",
        "package": "npm run check-types && npm run lint && npm run build:webview && npm run copy-css && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir dist",
        "watch-tests": "tsc -p . -w --outDir dist",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "node --experimental-vm-modules node_modules/.bin/jest --detectOpenHandles",
        "test:debug": "node --inspect --experimental-vm-modules node_modules/.bin/jest --runInBand --debug",
        "build:webview": "esbuild src/webView/renderMarkDown.ts --bundle --outfile=builtResources/renderMarkDown.js --format=iife",
        "watch:webview": "esbuild src/webView/renderMarkDown.ts --bundle --outfile=builtResources/renderMarkDown.js --format=iife --watch",
        "copy-css": "node ./scripts/copyCss.js",
        "serve:chat": "node scripts/serve-chat.js"
    },
    "dependencies": {
        "highlight.js": "^11.11.1",
        "marked": "^16.3.0",
        "node-fetch": "^3.3.2"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/vscode": "^1.102.0",
        "@typescript-eslint/eslint-plugin": "^8.39.0",
        "@typescript-eslint/parser": "^8.39.0",
        "@vscode/test-cli": "^0.0.11",
        "@vscode/test-electron": "^2.5.2",
        "chokidar": "^4.0.3",
        "esbuild": "^0.25.10",
        "eslint": "^9.32.0",
        "express": "^5.1.0",
        "jest": "^30.0.5",
        "npm-run-all": "^4.1.5",
        "ts-jest": "^29.4.1",
        "typescript": "^5.9.2",
        "ws": "^8.18.3"
    }
}
